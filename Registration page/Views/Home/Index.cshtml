@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration - Troywings Technologies</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/registration.css" />
</head>
<body>
    <!-- Animated Background -->
    <div class="bg-animation">
        <div class="bg-gradient"></div>
        <div class="floating-shapes">
            <div class="shape shape1"></div>
            <div class="shape shape2"></div>
            <div class="shape shape3"></div>
            <div class="shape shape4"></div>
        </div>
    </div>

    <!-- Main Container -->
    <div class="page-wrapper">
        <div class="registration-container">

            <!-- Left Side - Form -->
            <div class="form-section">
                <!-- Logo Header -->
                <div class="logo-header">
                    <div class="logo">
                        <div class="logo-icon">
                            <i class="fas fa-rocket"></i>
                        </div>
                        <div class="logo-content">
                            <h1 class="logo-title">Troywings Technologies</h1>
                            <p class="logo-subtitle">A Drive for Future</p>
                        </div>
                    </div>
                </div>

                <!-- Form Header -->
                <div class="form-header">
                    <h2>Create Your Account</h2>
                    <p>Join our community and start your journey</p>
                </div>

                <!-- Registration Form -->
                <form id="registrationForm" class="registration-form">

                    <!-- Full Name -->
                    <div class="form-group">
                        <label for="fullName">
                            <i class="fas fa-user"></i>
                            Full Name <span class="required">*</span>
                        </label>
                        <input type="text"
                               id="fullName"
                               name="fullName"
                               placeholder="Enter your full name"
                               required />
                        <span class="error-message" id="fullNameError"></span>
                    </div>

                    <!-- Father's Name -->
                    <div class="form-group">
                        <label for="fatherName">
                            <i class="fas fa-user-tie"></i>
                            Father's Name <span class="required">*</span>
                        </label>
                        <input type="text"
                               id="fatherName"
                               name="fatherName"
                               placeholder="Enter father's name"
                               required />
                        <span class="error-message" id="fatherNameError"></span>
                    </div>

                    <!-- Date of Birth & Email -->
                    <div class="form-row">
                        <div class="form-group">
                            <label for="dob">
                                <i class="fas fa-calendar"></i>
                                Date of Birth <span class="required">*</span>
                            </label>
                            <input type="date"
                                   id="dob"
                                   name="dob"
                                   required />
                            <span class="error-message" id="dobError"></span>
                        </div>

                        <div class="form-group">
                            <label for="email">
                                <i class="fas fa-envelope"></i>
                                Email Address <span class="required">*</span>
                            </label>
                            <input type="email"
                                   id="email"
                                   name="email"
                                   placeholder="name@example.com"
                                   required />
                            <span class="error-message" id="emailError"></span>
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="form-group">
                        <label for="address">
                            <i class="fas fa-map-marker-alt"></i>
                            Address <span class="required">*</span>
                        </label>
                        <textarea id="address"
                                  name="address"
                                  placeholder="Enter your complete address"
                                  rows="3"
                                  required></textarea>
                        <span class="error-message" id="addressError"></span>
                    </div>

                    <!-- Phone Number -->
                    <div class="form-group">
                        <label for="phone">
                            <i class="fas fa-phone"></i>
                            Phone Number <span class="optional">(Optional)</span>
                        </label>
                        <input type="tel"
                               id="phone"
                               name="phone"
                               placeholder="+91 XXXXX XXXXX" />
                        <span class="error-message" id="phoneError"></span>
                    </div>

                    <!-- Terms & Conditions -->
                    <div class="form-group checkbox-group">
                        <label class="checkbox-label">
                            <input type="checkbox" id="terms" required />
                            <span class="checkbox-custom"></span>
                            <span class="checkbox-text">
                                I agree to the <a href="#" class="link">Terms & Conditions</a>
                                and <a href="#" class="link">Privacy Policy</a>
                            </span>
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn-submit">
                        <span class="btn-text">Create Account</span>
                        <i class="fas fa-arrow-right btn-icon"></i>
                    </button>

                    <!-- Sign In Link -->
                    <div class="form-footer">
                        <p>Already have an account? <a href="#" class="link">Sign in here</a></p>
                    </div>
                </form>
            </div>

            <!-- Right Side - Hero -->
            <div class="hero-section">
                <div class="hero-content">
                    <!-- Hero Header -->
                    <div class="hero-header">
                        <div class="hero-badge">
                            <i class="fas fa-star"></i>
                            <span>Trusted by 10,000+ Professionals</span>
                        </div>
                        <h1>Join Troywings Technologies</h1>
                        <p>An engineering firm dedicated to software product development, software services, technical research, and human skill development.</p>
                    </div>

                    <!-- Features -->
                    <div class="hero-features">
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-code"></i>
                            </div>
                            <div class="feature-content">
                                <h4>Software Development</h4>
                                <p>Build innovative solutions with expert engineers</p>
                            </div>
                        </div>

                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-flask"></i>
                            </div>
                            <div class="feature-content">
                                <h4>Technical Research</h4>
                                <p>Work on cutting-edge technology projects</p>
                            </div>
                        </div>

                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-graduation-cap"></i>
                            </div>
                            <div class="feature-content">
                                <h4>Skill Development</h4>
                                <p>Enhance your capabilities with real-time training</p>
                            </div>
                        </div>

                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="feature-content">
                                <h4>HR & Recruitment</h4>
                                <p>Connect with opportunities matching your skills</p>
                            </div>
                        </div>
                    </div>

                    <!-- Stats -->
                    <div class="hero-stats">
                        <div class="stat">
                            <h3>10M+</h3>
                            <p>Professionals</p>
                        </div>
                        <div class="stat-divider"></div>
                        <div class="stat">
                            <h3>100K+</h3>
                            <p>Opportunities</p>
                        </div>
                        <div class="stat-divider"></div>
                        <div class="stat">
                            <h3>150+</h3>
                            <p>Countries</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Custom JavaScript -->
    <script src="~/js/registration.js"></script>
</body>
</html>