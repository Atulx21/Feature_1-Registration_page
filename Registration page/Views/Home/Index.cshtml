@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration - Troywings Technologies</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/registration.css" />
</head>
<body>
    <!-- Animated Background -->
    <div class="bg-animation">
        <div class="bg-gradient"></div>
        <div class="orb orb1"></div>
        <div class="orb orb2"></div>
        <div class="orb orb3"></div>
        <div class="grid-overlay"></div>
    </div>

    <!-- Main Container -->
    <div class="registration-container">
        <!-- Form Side -->
        <div class="form-side">
            <div class="brand-logo">
                <div class="logo-icon">
                    <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="50" cy="50" r="45" fill="none" stroke="url(#gradient)" stroke-width="3" />
                        <path d="M 30 50 L 50 30 L 70 50 L 50 70 Z" fill="url(#gradient)" />
                        <circle cx="50" cy="50" r="8" fill="url(#gradient)" />
                        <defs>
                            <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" style="stop-color:#14b8a6;stop-opacity:1" />
                                <stop offset="100%" style="stop-color:#06b6d4;stop-opacity:1" />
                            </linearGradient>
                        </defs>
                    </svg>
                </div>
                <div class="logo-text">
                    <span class="company-name">Troywings Technologies</span>
                    <span class="company-tagline">A Drive for Future</span>
                </div>
            </div>

            <div class="welcome-text">
                <h2>Create Your Account</h2>
                <p>Join our community of professionals and innovators</p>
            </div>

            <form id="registrationForm">
                <div class="form-row">
                    <div class="form-group">
                        <label for="fullName">Full Name <span class="required">*</span></label>
                        <div class="input-wrapper">
                            <input type="text" id="fullName" name="fullName" placeholder="Enter your full name" required>
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <span class="error-message" id="fullNameError"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="fatherName">Father's Name <span class="required">*</span></label>
                        <div class="input-wrapper">
                            <input type="text" id="fatherName" name="fatherName" placeholder="Enter father's name" required>
                            <i class="fa-solid fa-user-tie"></i>
                        </div>
                        <span class="error-message" id="fatherNameError"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="dob">Date of Birth <span class="required">*</span></label>
                        <div class="input-wrapper">
                            <input type="date" id="dob" name="dob" required>
                            <i class="fa-solid fa-calendar-days"></i>
                        </div>
                        <span class="error-message" id="dobError"></span>
                    </div>

                    <div class="form-group">
                        <label for="email">Email Address <span class="required">*</span></label>
                        <div class="input-wrapper">
                            <input type="email" id="email" name="email" placeholder="name@example.com" required>
                            <i class="fa-regular fa-envelope"></i>
                        </div>
                        <span class="error-message" id="emailError"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group full-width">
                        <label for="address">Address <span class="required">*</span></label>
                        <div class="input-wrapper textarea-wrapper">
                            <textarea id="address" name="address" placeholder="Enter your complete address" rows="3" required></textarea>
                            <i class="fa-solid fa-location-dot"></i>
                        </div>
                        <span class="error-message" id="addressError"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="phone">Phone Number</label>
                        <div class="input-wrapper">
                            <input type="tel" id="phone" name="phone" placeholder="+91 XXXXX XXXXX">
                            <i class="fa-solid fa-phone"></i>
                        </div>
                        <span class="error-message" id="phoneError"></span>
                    </div>
                </div>

                <div class="form-options">
                    <div class="checkbox-wrapper">
                        <input type="checkbox" id="terms" required>
                        <label for="terms">I agree to the <a href="#" class="terms-link">Terms & Conditions</a> and <a href="#" class="terms-link">Privacy Policy</a></label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">
                    <span class="btn-text">Create Account</span>
                    <i class="fa-solid fa-arrow-right btn-icon"></i>
                </button>

                <div class="login-text">
                    Already have an account? <a href="#">Sign in here</a>
                </div>
            </form>
        </div>

        <!-- Hero Side -->
        <div class="hero-side">
            <div class="hero-pattern"></div>
            <div class="hero-content">
                <div class="hero-badge">
                    <i class="fa-solid fa-star"></i>
                    <span>Trusted by 10,000+ Professionals</span>
                </div>

                <h1>Join Troywings Technologies</h1>
                <p>An engineering firm dedicated to software product development, software services, technical research, and human skill development.</p>

                <div class="features">
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="fa-solid fa-code"></i>
                        </div>
                        <div class="feature-content">
                            <h4>Software Development</h4>
                            <p>Build innovative solutions with expert engineers</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="fa-solid fa-microscope"></i>
                        </div>
                        <div class="feature-content">
                            <h4>Technical Research</h4>
                            <p>Work on cutting-edge technology projects</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="fa-solid fa-graduation-cap"></i>
                        </div>
                        <div class="feature-content">
                            <h4>Skill Development</h4>
                            <p>Enhance your capabilities with real-time training</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="fa-solid fa-users-gear"></i>
                        </div>
                        <div class="feature-content">
                            <h4>HR & Recruitment</h4>
                            <p>Connect with opportunities that match your skills</p>
                        </div>
                    </div>
                </div>

                <div class="hero-stats">
                    <div class="stat-item">
                        <div class="stat-number">10M+</div>
                        <div class="stat-label">Professionals</div>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-item">
                        <div class="stat-number">100K+</div>
                        <div class="stat-label">Opportunities</div>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-item">
                        <div class="stat-number">150+</div>
                        <div class="stat-label">Countries</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom JavaScript -->
    <script src="~/js/registration.js"></script>
</body>
</html>