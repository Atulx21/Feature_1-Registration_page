@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
    <title>Create Account | Troywings Technologies</title>
    <meta name="description" content="Join Troywings Technologies - The future of engineering." />
    <meta name="theme-color" content="#0f172a" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:wght@400;500;600;700;800&family=Red+Hat+Text:wght@300;400;500;600&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="css/registration.css" />
</head>
<body>

    <div class="bg-animation position-fixed top-0 start-0 w-100 h-100" aria-hidden="true">
        <div class="bg-gradient-overlay position-absolute w-100 h-100"></div>
        <div class="floating-shapes position-absolute w-100 h-100 overflow-hidden">
            <div class="shape shape1 position-absolute rounded-circle"></div>
            <div class="shape shape2 position-absolute rounded-circle"></div>
            <div class="shape shape3 position-absolute rounded-circle"></div>
        </div>
    </div>

    <main class="page-wrapper position-relative min-vh-100 d-flex align-items-center justify-content-center p-3 p-md-4">
        <div class="container-fluid p-0">

            <div class="registration-container mx-auto overflow-hidden shadow-2xl">
                <div class="row g-0 h-100">

                    <div class="col-lg-6 position-relative z-2">
                        <div class="form-section p-4 p-md-5 h-100 d-flex flex-column justify-content-center">

                            <div class="logo-header mb-5 d-flex align-items-center gap-3">
                                <div class="logo-icon d-flex align-items-center justify-content-center">
                                    <i class="fas fa-rocket"></i>
                                </div>
                                <div class="logo-content">
                                    <h1 class="logo-title mb-0 fw-bold text-white">Troywings Technologies</h1>
                                    <p class="logo-subtitle mb-0 fw-medium text-info text-uppercase letter-spacing-1">A Drive for Future</p>
                                </div>
                            </div>

                            <div class="form-header mb-4">
                                <h2 class="display-6 fw-bold text-gradient mb-2">Create Account</h2>
                                <p class="text-secondary-light mb-0">Enter your details to join our engineering community.</p>
                            </div>

                            <form id="registrationForm" class="needs-validation" novalidate>

                                <div class="mb-4">
                                    <label for="fullName" class="form-label">
                                        <i class="fas fa-user"></i> Full Name <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" class="form-control" id="fullName" name="fullName"
                                           placeholder="e.g. Atul Parmar" autocomplete="name" required />
                                    <div class="invalid-feedback">Please enter your full name.</div>
                                </div>

                                <div class="mb-4">
                                    <label for="fatherName" class="form-label">
                                        <i class="fas fa-user-tie"></i> Father's Name <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" class="form-control" id="fatherName" name="fatherName"
                                           placeholder="Enter father's name" required />
                                    <div class="invalid-feedback">Father's name is required.</div>
                                </div>

                                <div class="row g-3 mb-4">
                                    <div class="col-md-6">
                                        <label for="dob" class="form-label">
                                            <i class="fas fa-calendar"></i> Date of Birth <span class="text-danger">*</span>
                                        </label>
                                        <input type="date" class="form-control" id="dob" name="dob" required />
                                        <div class="invalid-feedback">Required.</div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="email" class="form-label">
                                            <i class="fas fa-envelope"></i> Email <span class="text-danger">*</span>
                                        </label>
                                        <input type="email" class="form-control" id="email" name="email"
                                               placeholder="name@example.com" autocomplete="email" required />
                                        <div class="invalid-feedback">Invalid email.</div>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="address" class="form-label">
                                        <i class="fas fa-map-marker-alt"></i> Address <span class="text-danger">*</span>
                                    </label>
                                    <textarea class="form-control" id="address" name="address" rows="2"
                                              placeholder="Street, City, State, Zip Code" autocomplete="street-address" required></textarea>
                                    <div class="invalid-feedback">Address is required.</div>
                                </div>

                                <div class="mb-4">
                                    <label for="phone" class="form-label">
                                        <i class="fas fa-phone"></i> Phone Number <span class="text-muted fw-normal text-capitalize ms-1" style="font-size: 0.8em; letter-spacing: 0;">(Optional)</span>
                                    </label>
                                    <input type="tel" class="form-control" id="phone" name="phone"
                                           placeholder="+91 XXXXX XXXXX" autocomplete="tel" />
                                </div>

                                <div class="mb-4">
                                    <div class="form-check d-flex align-items-start gap-2">
                                        <input class="form-check-input mt-1" type="checkbox" id="terms" required />
                                        <label class="form-check-label text-secondary-light small" for="terms">
                                            I agree to the <a href="#" class="text-info text-decoration-none fw-semibold link-hover">Terms & Conditions</a>
                                            and <a href="#" class="text-info text-decoration-none fw-semibold link-hover">Privacy Policy</a>.
                                        </label>
                                        <div class="invalid-feedback">You must agree to continue.</div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-submit w-100 d-flex align-items-center justify-content-center gap-2">
                                    <span>Create Account</span>
                                    <i class="fas fa-arrow-right"></i>
                                </button>

                                <div class="text-center mt-4">
                                    <p class="mb-0 text-secondary-light small">Already have an account? <a href="#" class="text-white fw-bold text-decoration-none link-hover">Sign in</a></p>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="col-lg-6 d-none d-lg-block position-relative border-start border-white border-opacity-10">
                        <div class="hero-section h-100 d-flex align-items-center justify-content-center p-5">
                            <div class="hero-content w-100">

                                <div class="d-inline-flex align-items-center gap-2 px-3 py-2 rounded-pill bg-white bg-opacity-10 border border-white border-opacity-10 mb-4 backdrop-blur">
                                    <i class="fas fa-star text-warning"></i>
                                    <span class="small fw-bold text-white letter-spacing-1">TRUSTED BY 10,000+ PROS</span>
                                </div>

                                <h1 class="display-5 fw-bold text-white mb-3">Join Troywings<br>Technologies</h1>
                                <p class="lead text-white-50 mb-5 fw-light">Dedicated to software product development, technical research, and human skill development.</p>

                                <div class="row g-4 mb-5">
                                    <div class="col-12">
                                        <div class="feature-card p-4 rounded-4 d-flex align-items-start gap-3 h-100">
                                            <div class="feature-icon rounded-3 d-flex align-items-center justify-content-center flex-shrink-0">
                                                <i class="fas fa-code"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-bold text-white mb-1">Software Development</h6>
                                                <p class="small text-white-50 mb-0">Build innovative solutions with expert engineers</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="feature-card p-4 rounded-4 d-flex align-items-start gap-3 h-100">
                                            <div class="feature-icon rounded-3 d-flex align-items-center justify-content-center flex-shrink-0">
                                                <i class="fas fa-flask"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-bold text-white mb-1">Technical Research</h6>
                                                <p class="small text-white-50 mb-0">Work on cutting-edge technology projects</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="feature-card p-4 rounded-4 d-flex align-items-start gap-3 h-100">
                                            <div class="feature-icon rounded-3 d-flex align-items-center justify-content-center flex-shrink-0">
                                                <i class="fas fa-graduation-cap"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-bold text-white mb-1">Skill Development</h6>
                                                <p class="small text-white-50 mb-0">Enhance your capabilities with real-time training</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="feature-card p-4 rounded-4 d-flex align-items-start gap-3 h-100">
                                            <div class="feature-icon rounded-3 d-flex align-items-center justify-content-center flex-shrink-0">
                                                <i class="fas fa-users"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-bold text-white mb-1">HR & Recruitment</h6>
                                                <p class="small text-white-50 mb-0">Connect with opportunities matching your skills</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between p-4 rounded-4 bg-black bg-opacity-25 border border-white border-opacity-10">
                                    <div class="text-center">
                                        <h4 class="fw-bold text-white mb-0">10M+</h4>
                                        <span class="small text-white-50">Users</span>
                                    </div>
                                    <div class="vr bg-white opacity-25"></div>
                                    <div class="text-center">
                                        <h4 class="fw-bold text-white mb-0">100K+</h4>
                                        <span class="small text-white-50">Jobs</span>
                                    </div>
                                    <div class="vr bg-white opacity-25"></div>
                                    <div class="text-center">
                                        <h4 class="fw-bold text-white mb-0">150+</h4>
                                        <span class="small text-white-50">Countries</span>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/registration.js"></script>
</body>
</html>